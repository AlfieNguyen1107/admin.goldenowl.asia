- content_for :page_title, @employee.full_name
section.section
  .container.mb-4
    hr/
    | Full name:
    h4.title
      = @employee.full_name
    - if @employee.image.present?
      hr/
      | Avatar
      h4.title
        = image_tag @employee.image.resize(:thumb)
    hr/
    | Email:
    h4.title
      = @employee.email
    hr/
    | Joined date:
    h4.title
      = @employee.joined_date
    hr/
    | Contract signing date:
    h4.title
      = @employee.contract_signing_date
    hr/
    | Current address:
    h4.title
      = @employee.current_address
    hr/
    | Emp number:
    h4.title
      = @employee.emp_number
    hr/
    | Phone number:
    h4.title
      = @employee.phone_number
    hr/
    | Registered address:
    h4.title
      = @employee.registered_address
    hr/
    | Position:
    h4.title
      = @employee.position_name
    hr/
    | Employment status:
    h4.title
      = @employee.employment_status
    hr/
    | Contract status:
    h4.title
      = @employee.contract_status
    hr/
    | Woring arrangement:
    h4.title
      = @employee.working_arrangement
    hr
    nav.level
      .level-left.mt-2
        p.level-item
          strong Actions
      .level-right.d-flex
        .level-item
          = link_to "Edit", edit_employee_path(@employee), class:"button btn btn-primary btn-sm"
        .level-item.ms-1
          = link_to "Delete", employee_path(@employee), method: :delete, data: { confirm: "Are you sure?" }, class:"button btn btn-danger btn-sm"
        .level-item.ms-1
          = link_to  "Back", employees_path(page: @page), class:"button btn btn-dark btn-sm"
    hr
    - if @employee.email.present?
        div.field
          button#add-account.side-nav-link data-bs-target='#standard-modal' data-bs-toggle='modal' type='button' class='btn btn-primary btn-sm'
            span
              | Add account
        = render partial: 'modal_add_account', locals: {email: @employee.email }
